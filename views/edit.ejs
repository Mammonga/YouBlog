<%- include('partials/header') %>
<div class="container">
    <h2 id="h2-title">Edit Your Blog Post</h2><br>

    <form class="form-group" action="/posts/<%= post.id %>" method="POST">
        <div class="form-item">
            <h3>Title</h3>
            <input type="text" id="title" name="title" value="<%= post.title %>" required><br>
        </div>
        <div class="form-item">
            <h3>Your Text</h3>
            <textarea id="content" name="content" class="custom-textarea" required><%= post.content %></textarea>
        </div>
        <div class="button-container">
            <input type="submit" id="butn" value="Update Post">
        </div>
    </form>
</div>
